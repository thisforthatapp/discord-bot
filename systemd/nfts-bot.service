# systemd/nfts-bot.service
[Unit]
Description=NFT Collection Stats Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/discord-bot/bots
Environment=PYTHONPATH=/home/ubuntu/discord-bot/bots
ExecStart=/home/ubuntu/discord-bot/venv/bin/python -c 'from nfts_bot import NFTsBot; NFTsBot().run(os.getenv("NFTS_BOT_TOKEN"))'
Restart=always

[Install]
WantedBy=multi-unit.target